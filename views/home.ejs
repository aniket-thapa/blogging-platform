<%- include('partials/navbar') %>

<div class="bg-gray-100 min-h-screen">
  <!-- Hero Section -->
  <div class="container mx-auto px-4 py-16 text-center">
    <h1 class="text-5xl font-extrabold text-blue-600 mb-6">
      Welcome to the Blog Website
    </h1>
    <p class="text-lg text-gray-700 mb-8">
      Discover, create, and share amazing stories with the world. Join a
      community of passionate bloggers today!
    </p>
    <a
      href="/blogs"
      class="bg-blue-500 text-white py-3 px-6 rounded-lg shadow-lg hover:bg-blue-600 transition"
    >
      Explore Blogs
    </a>
    <a
      href="/register"
      class="bg-gray-300 text-gray-800 py-3 px-6 rounded-lg shadow-lg hover:bg-gray-400 transition ml-4"
    >
      Get Started
    </a>
  </div>

  <!-- Features Section -->
  <div class="bg-white py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">
        Why Join Us?
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mb-4"
          >
            <i class="fas fa-pen text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">
            Create Your Own Blogs
          </h3>
          <p class="text-gray-600">
            Share your thoughts and stories with a global audience.
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mb-4"
          >
            <i class="fas fa-users text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">
            Join the Community
          </h3>
          <p class="text-gray-600">
            Connect with like-minded bloggers and readers.
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="text-center">
          <div
            class="w-16 h-16 mx-auto bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mb-4"
          >
            <i class="fas fa-share-alt text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">
            Share and Engage
          </h3>
          <p class="text-gray-600">
            Interact with others through likes, comments, and sharing.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
