<%- include('../partials/navbar') %>

<div class="bg-gray-100 min-h-screen">
  <!-- Profile Header -->
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-blue-600 mb-6">
      <%= user.username %>'s Profile
    </h1>

    <h2 class="text-2xl font-semibold text-gray-700 mb-4">Your Blogs</h2>

    <!-- Blogs List -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% blogs.forEach(blog => { %>
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-2">
          <%= blog.title %>
        </h2>
        <p class="text-sm text-gray-600 mb-4">
          Created on <%= blog.createdAt.toDateString() %>
        </p>
        <div class="flex justify-between">
          <a
            href="/blogs/<%= blog._id %>"
            class="text-blue-500 hover:underline"
          >
            Read More
          </a>
          <a
            href="/blogs/<%= blog._id %>/edit"
            class="text-gray-500 hover:underline"
          >
            Edit
          </a>
        </div>
      </div>
      <% }) %>
    </div>

    <!-- Create New Blog Button -->
    <div class="mt-8">
      <a
        href="/blogs/new"
        class="bg-blue-500 text-white py-3 px-6 rounded-lg hover:bg-blue-600 transition"
      >
        Create New Blog
      </a>
    </div>
  </div>
</div>
