<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Settings (<%= user.username %>)</title>
    <link rel="stylesheet" href="/public/css/tailwind.css" />
    <script
      src="https://kit.fontawesome.com/9ca9aa7819.js"
      crossorigin="anonymous"
    ></script>
    <script src="/public/js/showNotification.js"></script>
  </head>
  <body
    class="relative min-h-screen bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100"
  >
    <%- include('../partials/navbar') %>

    <div>
      <div class="max-w-5xl mx-auto sm:px-16 sm:py-8">
        <% if(!user.userId){ %>
        <h3>Add Your User Id</h3>
        <form id="userIdForm" action="/user/settings/userId" method="post">
          <p class="text-gray-600 mb-2">
            Please enter your User ID to enable additional features.
          </p>
          <input
            type="text"
            name="userId"
            placeholder="Enter unique User ID"
            class="w-1/2 mb-4 mt-1 p-2 focus:outline-none border border-gray-300 dark:border-gray-700 rounded-md bg-gray-50 focus:border-blue-500 dark:focus:border-blue-500 dark:bg-gray-700 text-gray-900 dark:text-gray-100"
            required
          />
          <input
            type="submit"
            value="Submit"
            class="bg-blue-500 py-2 px-4 rounded focus:ring cursor-pointer"
          />
        </form>

        <% } else { %>
        <p>Your User id is <%= user.userId %></p>
        <% } %>
      </div>
    </div>
    <%- include('../partials/footer') %>
    <script>
      const form = document.getElementById('userIdForm');

      form.addEventListener('submit', async (event) => {
        event.preventDefault();
        try {
          // Get Id and send in  body
          const response = await fetch('/user/settings/userId', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              userId: form.userId.value,
            }),
          });
          const result = await response.json();
          if (response.ok) {
            showNotification(result.message, 3000);
          } else {
            throw new Error(result.message || 'An error occurred');
          }
        } catch (error) {
          showNotification(error.message, 3000);
          console.error('Error:', error);
        }
      });
    </script>
  </body>
</html>
