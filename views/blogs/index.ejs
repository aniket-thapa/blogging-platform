<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Listing</title>
    <script
      src="https://kit.fontawesome.com/9ca9aa7819.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body
    class="min-h-screen bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100"
  >
    <%- include('../partials/navbar') %>
    <div class="max-w-4xl min-h-screen container mx-auto px-4 py-8">
      <!-- Header -->
      <header class="flex items-center justify-between mb-8">
        <h1 class="text-3xl font-bold">Blog Listing</h1>
      </header>

      <!-- Blog Listing -->
      <div class="space-y-6">
        <% blogs.forEach(blog => { %>
        <div class="border-b border-gray-400 dark:border-gray-700 pb-4">
          <a href="/blogs/<%= blog._id %>" class="block group mb-8">
            <h2
              class="text-xl font-semibold group-hover:text-blue-500 group-focus:text-blue-500 transition-colors"
            >
              <%= blog.title %>
            </h2>
            <div
              class="prose font-normal dark:prose-invert mt-4 group-hover:text-gray-600 dark:group-hover:text-gray-300 transition-colors"
            >
              <%= blog.content.replace(/<[^>]*>?/gm, '').substring(0, 100) %>...
            </div>
          </a>
          <div class="flex justify-between items-center mt-4">
            <div class="flex items-center space-x-4">
              <div class="flex items-center space-x-1">
                <i class="fa-regular fa-heart"></i>
                <span><%= blog.likes.length %> </span>
              </div>
              <div class="flex items-center space-x-1">
                <i class="fa-regular fa-comments"></i>
                <span><%= blog.comments.length %></span>
              </div>
              <div class="flex items-center space-x-1">
                <i class="fa-regular fa-circle-user font-bold"></i>
                <span class="text-gray-600 dark:text-gray-400"
                  ><%= blog.author.username %></span
                >
              </div>
              <div class="flex items-center space-x-1">
                <i class="fa-regular fa-calendar"></i>
                <span class="text-gray-600 dark:text-gray-400"
                  ><%= new Date(blog.createdAt).toDateString() %></span
                >
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
