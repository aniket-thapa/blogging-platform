<%- include('../partials/navbar') %>
<style>
  /* Custom CSS for multi-line ellipsis */

  .eellipsis {
    overflow: hidden; /* Hide overflowed content */
    text-overflow: ellipsis; /* Add ellipsis for overflowed content */
    display: -webkit-box; /* Enable multi-line truncation */
    -webkit-box-orient: vertical; /* Set box orientation to vertical for multi-line truncation */
    -webkit-line-clamp: 2; /* Limit to 2 lines */
  }
</style>

<div class="bg-gray-50 min-h-screen py-12">
  <!-- Header -->
  <div class="container mx-auto text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-800">
      Welcome to <span class="text-blue-600">Our Blog Space</span>
    </h1>
    <p class="text-gray-600 mt-2 text-lg">
      Dive into the latest thoughts, insights, and stories from our
      contributors.
    </p>
  </div>

  <!-- Blogs Section -->
  <div
    class="container mx-auto px-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
  >
    <% blogs.forEach(blog => { %>
    <div
      class="relative h-48 bg-white shadow-md rounded-lg overflow-hidden transform transition duration-300 hover:shadow-lg hover:scale-105"
    >
      <!-- Decorative Bar -->
      <div class="absolute h-1 w-full bg-blue-600"></div>

      <!-- Content -->
      <div class="p-6 flex flex-col justify-between">
        <div>
          <h2 class="min-h-16 text-2xl eellipsis font-semibold text-gray-800">
            <%= blog.title %>
          </h2>
          <p class="text-sm text-gray-500 mt-2">
            By
            <span class="font-medium text-gray-700"
              ><%= blog.author.username %></span
            >
            on <%= blog.createdAt.toDateString() %>
          </p>
        </div>

        <a
          href="/blogs/<%= blog._id %>"
          class="inline-block mt-4 text-blue-500 font-medium hover:text-blue-700 transition"
        >
          Read More â†’
        </a>
      </div>
    </div>

    <% }) %>
  </div>

  <!-- Create New Blog -->
  <div class="text-center mt-16">
    <a
      href="/blogs/new"
      class="inline-block px-8 py-3 text-lg font-medium text-white bg-blue-600 rounded-md shadow-md hover:bg-blue-700 hover:shadow-lg transition"
    >
      Create New Blog
    </a>
  </div>
</div>
