<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Saved Blogs</title>
    <link rel="stylesheet" href="/public/css/tailwind.css" />
    <script
      src="https://kit.fontawesome.com/9ca9aa7819.js"
      crossorigin="anonymous"
    ></script>
    <script async defer src="/public/js/scrollToTop.js"></script>
    <style>
      .custom-scrollbar::-webkit-scrollbar {
        width: 12px;
      }

      .custom-scrollbar::-webkit-scrollbar-thumb {
        background-color: #3b83f670;
        transition: background-color 0.3s ease;
      }

      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background-color: #2563eb70;
      }

      .custom-scrollbar::-webkit-scrollbar-thumb:active {
        background-color: #1d4fd870;
        box-shadow: inset 0 0 10px #0000004d;
      }

      .custom-scrollbar::-webkit-scrollbar-track {
        background-color: transparent;
      }
    </style>
  </head>
  <body
    class="custom-scrollbar min-h-screen flex flex-col bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100"
  >
    <%- include('../partials/navbar') %>
    <div class="max-w-5xl container mx-auto px-4 py-8">
      <!-- Header -->
      <header class="flex items-center justify-between mb-8">
        <h1 class="text-4xl font-extrabold text-blue-500">Saved Blogs</h1>
      </header>

      <!-- Saved Blogs Section -->
      <% if (savedBlogs.length === 0) { %>
      <div class="text-center py-16">
        <h2 class="text-2xl font-medium mb-4">
          You haven't saved any blogs yet.
        </h2>
        <p class="text-gray-600 dark:text-gray-400">
          Explore blogs and save your favorites to view them here!
        </p>
      </div>
      <% } else { %>
      <div class="space-y-6">
        <% savedBlogs.forEach((blog) => { %>
        <div
          class="border-b border-gray-400 hover:bg-gray-250 dark:hover:bg-gray-850 dark:border-gray-700 pb-6 rounded-md px-5 pt-4 transition-colors"
        >
          <a
            href="/blogs/<%= blog._id %>"
            class="block group mb-6 md:mr-28 transition-colors"
          >
            <h2
              class="text-3xl font-semibold group-hover:text-blue-500 group-focus:text-blue-500 transition-colors"
            >
              <%= blog.title %>
            </h2>
            <div
              class="prose font-normal dark:prose-invert mt-3 group-hover:text-blue-500 group-focus:text-blue-500 transition-colors"
            >
              <%= blog.content.replace(/<[^>]*>?/gm, '').substring(0, 100) %>...
            </div>
          </a>

          <% if(blog.tags.length !== 0) { %>
          <!-- Tags SHow Section -->
          <div class="my-3">
            <div class="flex flex-wrap gap-2">
              <% blog.tags.forEach(tag => { %>
              <a
                href="/blogs/tags/<%= tag %>"
                class="inline-block px-3 py-1 bg-gray-200 dark:bg-gray-800 text-gray-700 dark:text-gray-200 text-sm rounded-lg hover:bg-gray-300 dark:hover:bg-gray-700"
              >
                #<%= tag %>
              </a>
              <% }) %>
            </div>
          </div>
          <% } %>

          <!-- Likes, Comments, Author and Date Section -->
          <div
            class="flex justify-between items-center mt-4 text-sm sm:text-base"
          >
            <div
              class="flex items-center space-x-4 font-normal text-sm text-gray-600 dark:text-gray-400"
            >
              <div class="flex items-center space-x-1">
                <i class="fa-regular fa-heart"></i>
                <span><%= blog.likes.length %> </span>
              </div>
              <div class="flex items-center space-x-1">
                <i class="fa-regular fa-comments"></i>
                <span><%= blog.comments.length %></span>
              </div>
              <div class="flex items-center space-x-1">
                <i class="fa-regular fa-circle-user"></i>
                <span class=""><%= blog.author.username %></span>
              </div>
              <div class="flex items-center space-x-1">
                <i class="fa-regular fa-calendar"></i>
                <span class=""
                  ><%= new Date(blog.createdAt).toDateString() %></span
                >
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } %>
    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
